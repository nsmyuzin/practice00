<div class='blog-side-other'>
  <div class='side_article_list'>
    <div class='new_title'>新着記事</div>
    <ul>
      <% contents.each_with_index do |content,i| %>
        <li class='li_article'>
          <%= link_to article_path(content.content.url,content.id) do %>
            <%= content.name %>
            <span class='join_time'><%= time_ago_in_words(content.created_at)+"前" %> </span>
          <% end %>
        </li>
        <% break if i == 4%>
      <% end %>
    </ul>
  </div>
</div>
