<div class='container'>
  <div class='content'>
    <div class='form-head'>
      <h1 class= 'xx-large'>お問い合わせ</h1>
      <div class='sentence'>
        <p class=''>ご依頼・お問い合わせなどがありましたらこちらのフォームからお問い合わせください。<br>
        内容をご入力の上、「確認画面へ」ボタンをクリックしてください。</p>
      </div>
    </div>
    <%= form_with(model: @contact, url: confirm_contacts_path, local: true) do |f| %>
      <div class='form-inputs'>
        <div>
          <%= f.label :full_name %>
          <%= f.text_field :full_name, {placeholder:"yamada taro", class:"form-control", required: true}%>
        </div>
        <div>
          <%= f.label :email %>
          <%= f.email_field :email, {placeholder:"sample@gmail.com", class:"form-control", required: true, pattern: '[\w\d_-]+@[\w\d_-]+\.[\w\d._-]+'}%>
        </div>
        <div>
          <%= f.label :title %>
          <%= f.text_field :title, {placeholder:"仕事の依頼", class:"form-control", required: true}%>
        </div>
        <div>
          <%= f.label :message %>
          <%= f.text_area :message, {placeholder:"メッセージ", class:"form-control", required: true}%>
        </div>
      </div>
      <div class='form-buttons'>
        <%= f.submit '確認画面へ', class: 'btn-stitch small' %>
      </div>
    <% end %>
  </div>
</div>

<%= content_for :right_content do %>
  <% @r_side_items && @r_side_items.each do |rc| %>
    <%= render "/blog/side_item/#{rc.template}", item: rc.m_instances if rc %>
  <% end %>
<% end %>

<%= content_for :left_content do %>
  <% @l_side_items && @l_side_items.each do |li| %>
    <%= render "/blog/side_item/#{li.template}", item: li.m_instances if li %>
  <% end %>
<% end %>
