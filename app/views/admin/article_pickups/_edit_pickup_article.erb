<%= semantic_form_for [:admin, @article_pickup], builder: ActiveAdmin::FormBuilder do |f| %>
  <fieldset class="inputs">
    <ol>
      <%= f.input :title %>
      <%= f.input :description %>
      <%= f.input :content_type, as: :select, collection: Category.tree_type_order.map { |c| [c.name, c.id] } %>
      <a href='#' id='select-all'>select all</a>/
      <a href='#' id='deselect-all'>deselect all</a>
      <%= f.input :articles, as: :select, multiple: 'multiple' %>
    </ol>
  </fieldset>

  <fieldset class="actions">
    <ol>
      <li><%= f.submit "保存" %></li>
      <li class="cancel"><%= link_to("取り消す", admin_article_pickups_path)%></li>
    </ol>
  </fieldset>
<% end %>

<script>
  multi_wide_select('#article_pickup_article_ids');
</script>
